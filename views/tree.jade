extends layout

block content
    include includes/quick-nav

    if typeof last != 'undefined'
        include includes/commit

    .tree-list-wrapper
        table.tree-list
            thead
                tr
                    th.name name
                    th.age age
                    th.message message
            tbody
                each item in items
                    tr
                        td.name
                            span(class="pictogram " + item.type)
                            a(href=item.url)= item.name
                        td.date= item.head.date
                        td.message= item.head.message
                            [
                            a(href="mailto:" + item.head.author.email) #{item.head.author.name}
                            ]
